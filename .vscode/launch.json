    "version": "0.2.0",
    "configurations": [
        {
            "name": "Docker attach",
            "type": "node",
            "request": "attach",
            "address": "localhost",
            "port": 9229,
            "localRoot": "${workspaceFolder}/backend/src", // archivos en local
            "remoteRoot": "/app/src/", // archivos del contenedor
            "skipFiles": [
                "<node_internals>/**"
            ],
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        }
    ]
}